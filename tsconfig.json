{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "useUnknownInCatchVariables": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@ui/*": ["./src/app/ui/*"],
            "@auth/*": ["./src/app/ui/auth/*"],
            "@dashboard/*": ["./src/app/ui/dashboard/*"],
            "@public/*": ["./public/*"],
            "@images/*": ["./public/images/*"],
            "@icons/*": ["./public/icons/*"],
            "@lib/*": ["./src/app/lib/*"],
            "@firebase/*": ["./src/app/lib/firebase/*"],
            "@context/*": ["./src/app/context/*"],
            "@utilities/*": ["./src/app/lib/utilities/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
